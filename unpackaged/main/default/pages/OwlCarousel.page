<apex:page showHeader="false" applyHtmlTag="false" lightningStylesheets="true">
 <html>
     <head>
         <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.0.0-beta.3/assets/owl.carousel.min.css"/>
         <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.0.0-beta.3/assets/owl.theme.default.min.css"/>
         <style>
             .rounded-circle {
                 border-radius:50%;
                 height: 270px;
                 width: 270px;
                 padding-bottom: 20px;
                 object-fit: cover;
             }
             
             .h9 {
                 text-transform: uppercase;
                font-size: 21px;
                line-height: 25px;
             }
             
             p {
                  color: #4D4D4D;
                  font-family: "TradeGothicLT", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, Arial, "Helvetica Neue", sans-serif;
                  font-size: 18px;
                  line-height: 28px;
             }
             
             .carousel-item {
                 width: 270px; 
                 margin-left: 120px;
             }
             
             .txt-colour-change {
                 color: #079B86;
             }
             
             .mb-3 {
                 font-size: 40px;
                 font-weight: 600;
             }
             
             .cta-box {
                 border: 1px solid #CCCCCC;
                 padding: 5px 5px;
             }

                @media only screen and (max-width: 760px) {
              .cta-box { visibility: hidden;
max-height: 0; }
            }
         </style>
     </head>
     <body>
         <div class="cta-box">
         
        <center>
            <div style="margin-bottom: 50px;">
                <div class="txt-colour-change mb-3">Meet Our Team</div>
                <p>Meet the faculty and staff members of the School of Computer Science &amp; Technology</p>
            </div>
        </center>
        
        <div class="owl-carousel owl-theme">
           <div class="owl-item carousel-item carousel-item" >
               <center>
                   <img class="rounded-circle" src="{!$Resource.TeamMember1}" alt="Dr. Samuel Jackson"/>
                       <h6 class="h9">
                             Dr. Joe Ganczarski
                        </h6>
                   <p class="">School of Computer Science &amp; Technology, Part Time</p>
                </center>
            </div>
            
            <div class="owl-item carousel-item carousel-item" >
               <center>
                   <img class="rounded-circle" src="{!$Resource.TeamMember2}" alt="Dr. Simon Xu"/>
                       <h6 class="h9">
                            Dr. Cathy Chen
                        </h6>
                   <p class="">School of Computer Science &amp; Technology, Part Time</p>
                </center>
            </div>
            
            <div class="owl-item carousel-item carousel-item" >
               <center>
                   <img class="rounded-circle" src="{!$Resource.TeamMember3}" alt="Dr. Simon Xu"/>
                       <h6 class="h9">
                            Dr. Angelina Jolie
                        </h6>
                   <p class="">School of Computer Science &amp; Technology, Part Time</p>
                </center>
            </div>
            
            <div class="owl-item carousel-item carousel-item" >
               <center>
                   <img class="rounded-circle" src="{!$Resource.TeamMember6}" alt="Dr. Simon Xu"/>
                       <h6 class="h9">
                            Dr. Salman Khan
                        </h6>
                   <p class="">School of Computer Science &amp; Technology, Part Time</p>
                </center>
            </div>
            
            <div class="owl-item carousel-item carousel-item" >
               <center>
                   <img class="rounded-circle" src="{!$Resource.TeamMember4}" alt="Dr. Simon Xu"/>
                       <h6 class="h9">
                            Dr. Jack griffith
                        </h6>
                   <p class="">School of Computer Science &amp; Technology, Part Time</p>
                </center>
            </div>
            
            <div class="owl-item carousel-item carousel-item" >
               <center>
                   <img class="rounded-circle" src="{!$Resource.TeamMember5}" alt="Dr. Simon Xu"/>
                       <h6 class="h9">
                            Dr. Lee Xu
                        </h6>
                   <p class="">Director, School of Computer Science &amp; Technology, Full Professor</p>
                </center>
            </div>
        </div>
        
         <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
         <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.0.0-beta.3/owl.carousel.min.js"></script>
         
         <script type="text/javascript">
            $(document).ready(function() {
                $('.owl-carousel').owlCarousel({
                loop:true,
                responsiveClass:true,
                responsive:{
                    0:{
                        items:1,
                        nav:false
                    },
                    600:{
                        items:3,
                        nav:false
                    }
                }
                });
            });
        </script>
         </div>
     </body>   
 </html>
</apex:page>